<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6 pb-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="card rounded-0">
          <div class="card-header row background-color-orange m-0">
            <div class="col-md-2">
              <%= image_tag("logo.jpg", class: "img-logo") %>
            </div>
            <div class="col-md-10">
              <div class="text-white text-center py-2">
                <h3>Oficina Defensa Civil-Puno</h3>
              </div>
            </div>
          </div>
          <div class="card-body p-3 background-color-gray">
            <div class="form-group">
              <div class="input-group mb-2">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fa fa-user"></i></div>
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group mb-2">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fa fa-lock"></i></div>
                </div>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
            <div class="text-center">
              <div class="row">
                <div class="col-md-4 offset-md-4">
                  <%= f.submit "Log in", class: "btn btn-success btn-block btn-xs" %>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>